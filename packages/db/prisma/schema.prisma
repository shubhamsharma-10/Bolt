generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   Project[]
}

model Project {
  id            String   @id @default(cuid())
  description   String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  prompts       Prompt[]
}

enum promptType {
  SYSTEM
  USER
}

model Prompt {
  id          String   @id @default(cuid())
  content     String
  type        promptType
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  projectId   String
  project     Project @relation(fields: [projectId], references: [id])
}